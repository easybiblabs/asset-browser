<?php
// This is specific to Imagine Easy's deployment setup:

$deployConfigFile = dirname(__DIR__) . '/.deploy_configuration.php';
if (file_exists($deployConfigFile)) {
    require $deployConfigFileFile;

    // FIXME
    putenv("AWS_ACCESS_KEY_ID='" . $deploy_config['settings']['AWS_ACCESS-KEY'] . "'");
    putenv("AWS_SECRET_ACCESS_KEY='" . $deploy_config['settings']['AWS_SECRET-KEY'] . "'");

    $app['aws.s3.bucket'] = $deploy_config['settings']['AWS_BUCKET-NAME'];
    $app['github.key'] = $deploy_config['settings']['GITHUB_KEY'];
    $app['github.secret'] = $deploy_config['settings']['GITHUB_SECRET'];
    $app['github.callback'] = $deploy_config['settings']['GITHUB_CALLBACK'];
    $app['github.orgs'] = explode(',',$deploy_config['settings']['GITHUB_ORGS']);

    return;
}


$envConfiguration = ['AWS_ACCESS_KEY_ID', 'AWS_SECRET_ACCESS_KEY', 'S3_BROWSER_BUCKET'];
foreach ($envConfiguration as $envKey) {
    if (false === getenv($envKey)) {
        die("{$envKey} not set");
    }
}

$app['aws.s3.bucket'] = getenv('S3_BROWSER_BUCKET');

$app['github.key'] = '';
$app['github.secret'] = '';
$app['github.callback'] = 'http://127.0.0.1:8080/auth/verify';
$app['github.orgs'] = ['my-organization']; // -> https://github.com/my-organization
